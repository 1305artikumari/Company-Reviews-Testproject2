<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <title>Test Project</title>
    <style>
      #main {
        border: 2px solid coral;
        border-radius: 5px;
        font-weight: 500;
        margin: 50px auto;
        padding: 25px;
      }
      .search-container {
        display: flex;
        align-items: center;
        margin-top: 30px;
      }
      .search-input {
        border: 2px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 70%;
        font-size: 16px;
        outline: none;
      }
      .search-button {
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
      }
      .search-button:hover {
        background-color: #45a049;
      }
    </style>
  </head>

  <body>
    <div class="container" id="main">
      <form action="/" method="post" id="exp">
        <div class="form-group">
            <label for="name">Company Name</label>
            <input type="text" class="form-control" name="name" id="name" required>
        </div>

        <div class="form-group">
            <label for="pros">Pros</label>
            <input type="text" class="form-control" name="pros" id="pros" required>
        </div>

        <div class="form-group">
            <label for="cons">Cons</label>
            <input type="text" class="form-control" name="cons" id="cons" required>
        </div>

        <div class="form-group">
            <label for="rating">Rating</label>
            <div class="rating">
                <input type="radio" name="rating" value="1" id="star1" required><label for="star1"></label>
                <input type="radio" name="rating" value="2" id="star2" required><label for="star2"></label>
                <input type="radio" name="rating" value="3" id="star3" required><label for="star3"></label>
                <input type="radio" name="rating" value="4" id="star4" required><label for "star4"></label>
                <input type="radio" name="rating" value="5" id="star5" required><label for="star5"></label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" id="submit">Submit Reviews</button>
    </form>
      <form action="/" method="GET" >
        <div class="search-container">
          <input type="text"  name="search" id="search" class="search-input" placeholder="Search..." />
          <button type="submit" class="search-button">Search</button>
        </div>
      </form>

      <br /><br />

      <div>
        <ul id="display-items">
          <% if (filteredSellers && filteredSellers.length > 0) { %>
            <h4 style="color: red">Company Reviews</h4>
            <% for (const exp of filteredSellers) { %>
              <li>
                <h4 style="color: green" >Company name : <%= exp.name %></h4>
                <h4 style="color: orangered" >Company Rating: <%= exp.rating %></h4>
                <h6>Pros : <%= exp.pros %></h6>
                <h6>Cons : <%= exp.cons %></h6>
              </li>
              <% } %>
        <% } else { %>
            <!-- Handle the case when sellers is empty or undefined -->
        <% } %>
          
        </ul>
      </div>
    </div>
  </body>
</html>
